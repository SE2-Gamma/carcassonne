<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButton" parent="TextAppearance.AppCompat">
        <item name="android:radius">@dimen/radiusDefault</item>
        <item name="android:padding">@dimen/spaceDefault</item>
    </style>

    <style name="PrimaryButton" parent="BaseButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primary</item>
    </style>
</resources>